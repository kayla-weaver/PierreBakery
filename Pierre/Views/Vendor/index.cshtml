<link rel="stylesheet" type="text/css" href="~/css/styles.css" />
@using Pierre.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No Vendors have been added yet!</h3>
} 

@foreach (Vendor newVendor in Model)
{
  <h3><a href='/vendor/@newVendor.Id'>@newVendor.Name</a></h3>
}

<p><a href='/'>Back home</a></p>